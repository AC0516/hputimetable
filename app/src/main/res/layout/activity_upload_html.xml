<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/header_upload_html"/>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/id_webview_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/id_webview_btn2"
                android:text="期末成绩"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/id_webview_btn1"
                android:text="历年成绩"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/id_webview_btn3"
                android:text="空教室查询"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/id_webview_btn6"
                android:text="选课结果"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/id_webview_btn4"
                android:text="网上选课"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/id_webview_btn5"
                android:text="退课"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <WebView
            android:id="@+id/id_webview"
            android:background="@color/app_white"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_webview_code"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="right|center_horizontal|bottom"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="30dp"
        app:cardBackgroundColor="@color/app_blue1"
        app:cardCornerRadius="25dp"
        app:cardElevation="1dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="上传源码"
            android:textColor="@color/app_white" />

    </android.support.v7.widget.CardView>
</FrameLayout>