<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <!--<item name="colorAccent">@color/colorAccent</item>-->

        <item name="windowNoTitle">true</item>
        <item name="android:textColor">@android:color/black</item>

    </style>

    <style name="splash" parent="AppTheme">
        <item name="android:background">@drawable/launch1</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="mainTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary2</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="searchTheme" parent="AppTheme">
        <item name="colorPrimaryDark">@color/app_gray_f0f0f0</item>
    </style>

    <style name="TimeDataPicker">
        <item name="wheel_curtain">true</item>
        <item name="wheel_curved">false</item>
        <item name="wheel_visible_item_count">5</item>
        <item name="wheel_curtain_color">#64ff9393</item>
        <item name="wheel_atmospheric">true</item>
        <item name="wheel_item_text_color">@color/app_gray</item>
        <item name="wheel_selected_item_text_color">@android:color/black</item>
        <item name="wheel_item_text_size">14sp</item>
    </style>

</resources>
